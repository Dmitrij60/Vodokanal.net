{% extends template %}
{% block title %} Consultation order page {% endblock %}
{% block body %}
    <div class="starter-template">
        <h1>Заявка на консультацию:</h1>
        <hr>
        <br>
        {{ form_start(orderForm) }}
        {{ form_row(orderForm.district, {attr: { value : app.user.username } }) }}
        <br>
        {{ form_label(orderForm.department, 'Укажите Ваш отдел') }}
        {{ form_row(orderForm.department) }}
        <br>
        {{ form_label(orderForm.reason, 'Укажите причину обращения') }}
        {{ form_row(orderForm.reason) }}
        <br>
        {{ form_label(orderForm.contact, 'укажите Ваши контакты') }}
        {{ form_row(orderForm.contact) }}
        <br>
        {{ form_end(orderForm) }}
        <br>
        <hr>
    </div>
{% endblock %}